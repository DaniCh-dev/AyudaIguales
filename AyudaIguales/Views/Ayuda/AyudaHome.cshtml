@{
    ViewData["Title"] = "Ayudas";
}

<div class="container-fluid">
    <div class="row">
        <!-- CONTENIDO PRINCIPAL - Listado de ayudas -->
        <div class="col-lg-9">
            <!-- Cabecera con buscador y botón crear ayuda -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="bi bi-question-circle-fill text-primary"></i>
                    Ayudas Recientes
                </h2>
                <a href="#" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>
                    Nueva Ayuda
                </a>
            </div>

            <!-- Buscador principal -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text"
                               id="txtBuscador"
                               class="form-control border-start-0"
                               placeholder="Buscar por título o contenido...">
                        <button class="btn btn-primary" type="button" id="btnBuscar">
                            Buscar
                        </button>
                    </div>
                </div>
            </div>

            <!-- Listado de ayudas -->
            <div id="listadoAyudas">
                <!-- Las ayudas se cargarán aquí dinámicamente -->
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2 text-muted">Cargando ayudas...</p>
                </div>
            </div>

            <!-- Paginación (opcional para futuro) -->
            <nav aria-label="Paginación" class="mt-4">
                <ul class="pagination justify-content-center" id="paginacion">
                    <!-- Se generará dinámicamente -->
                </ul>
            </nav>
        </div>

        <!-- SIDEBAR DERECHA - Filtros -->
        <div class="col-lg-3">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-funnel-fill"></i>
                        Filtros
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Filtro por estado -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-toggle-on"></i>
                            Estado
                        </label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="filtroEstado" id="estadoTodas" value="" checked>
                            <label class="form-check-label" for="estadoTodas">
                                Todas
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="filtroEstado" id="estadoActivas" value="1">
                            <label class="form-check-label" for="estadoActivas">
                                Activas
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="filtroEstado" id="estadoInactivas" value="0">
                            <label class="form-check-label" for="estadoInactivas">
                                Inactivas
                            </label>
                        </div>
                    </div>

                    <!-- Filtro por usuario (solo para admin) -->
                    @if (Context.Session.GetString("UserRole") == "admin")
                    {
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-person-fill"></i>
                                Usuario
                            </label>
                            <select class="form-select" id="filtroUsuario">
                                <option value="">Todos los usuarios</option>
                                <!-- Se cargarán dinámicamente -->
                            </select>
                        </div>
                    }

                    <!-- Filtro por fecha -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-calendar-fill"></i>
                            Fecha
                        </label>
                        <select class="form-select" id="filtroFecha">
                            <option value="">Todas las fechas</option>
                            <option value="hoy">Hoy</option>
                            <option value="semana">Esta semana</option>
                            <option value="mes">Este mes</option>
                        </select>
                    </div>

                    <!-- Filtro por respuestas -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-chat-dots-fill"></i>
                            Respuestas
                        </label>
                        <select class="form-select" id="filtroRespuestas">
                            <option value="">Todas</option>
                            <option value="sin_respuestas">Sin respuestas</option>
                            <option value="con_respuestas">Con respuestas</option>
                        </select>
                    </div>

                    <!-- Botones de acción -->
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-primary" id="btnAplicarFiltros">
                            <i class="bi bi-check-circle"></i>
                            Aplicar filtros
                        </button>
                        <button type="button" class="btn btn-outline-secondary" id="btnLimpiarFiltros">
                            <i class="bi bi-x-circle"></i>
                            Limpiar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Variables globales
        let ayudasData = [];

        // Cargar ayudas al iniciar la página
        document.addEventListener('DOMContentLoaded', function() {
            cargarAyudas();
            cargarUsuarios(); // Solo si es admin
            configurarEventos();
        });

        // Configurar eventos de los elementos
        function configurarEventos() {
            // Búsqueda al hacer clic en el botón
            document.getElementById('btnBuscar').addEventListener('click', function() {
                aplicarBusqueda();
            });

            // Búsqueda al presionar Enter
            document.getElementById('txtBuscador').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    aplicarBusqueda();
                }
            });

            // Aplicar filtros
            document.getElementById('btnAplicarFiltros').addEventListener('click', function() {
                aplicarFiltros();
            });

            // Limpiar filtros
            document.getElementById('btnLimpiarFiltros').addEventListener('click', function() {
                limpiarFiltros();
            });
        }

        // Función para cargar ayudas desde el servidor
        async function cargarAyudas() {
            try {
                // Aquí llamarás a tu endpoint PHP o Controller
                // const response = await fetch('/Ayuda/ObtenerAyudas');
                // const data = await response.json();

                // DATOS DE EJEMPLO (reemplazar con llamada real)
                const data = {
                    ok: true,
                    ayudas: [
                        {
                            id: 1,
                            descripcion: 'Ayuda con ecuaciones diferenciales',
                            contenido: 'Necesito ayuda para resolver este tipo de ecuaciones',
                            nombre_usuario: 'Juan Pérez',
                            fecha: '2026-02-06T10:30:00',
                            activa: true,
                            num_respuestas: 3
                        },
                        {
                            id: 2,
                            descripcion: 'Dudas sobre programación en C#',
                            contenido: 'No entiendo cómo funcionan las interfaces',
                            nombre_usuario: 'María García',
                            fecha: '2026-02-06T09:15:00',
                            activa: true,
                            num_respuestas: 0
                        }
                    ]
                };

                if (data.ok) {
                    ayudasData = data.ayudas;
                    mostrarAyudas(ayudasData);
                }
            } catch (error) {
                console.error('Error al cargar ayudas:', error);
                mostrarError('No se pudieron cargar las ayudas');
            }
        }

        // Función para cargar usuarios (solo admin)
        async function cargarUsuarios() {
            const userRole = '@Context.Session.GetString("UserRole")';
            if (userRole !== 'admin') return;

            try {
                // Aquí llamarás a tu endpoint
                // const response = await fetch('/User/ObtenerUsuarios');
                // const data = await response.json();

                // DATOS DE EJEMPLO
                const data = {
                    ok: true,
                    usuarios: [
                        { id: 1, nombre_usuario: 'Juan Pérez' },
                        { id: 2, nombre_usuario: 'María García' }
                    ]
                };

                if (data.ok) {
                    const select = document.getElementById('filtroUsuario');
                    data.usuarios.forEach(usuario => {
                        const option = document.createElement('option');
                        option.value = usuario.id;
                        option.textContent = usuario.nombre_usuario;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Error al cargar usuarios:', error);
            }
        }

        // Función para mostrar las ayudas en el DOM
        function mostrarAyudas(ayudas) {
            const container = document.getElementById('listadoAyudas');

            if (ayudas.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-5">
                        <i class="bi bi-inbox fs-1 text-muted"></i>
                        <p class="mt-3 text-muted">No se encontraron ayudas</p>
                    </div>
                `;
                return;
            }

            let html = '';
            ayudas.forEach(ayuda => {
                const fecha = new Date(ayuda.fecha);
                const fechaFormateada = fecha.toLocaleDateString('es-ES', {
                    day: '2-digit',
                    month: '2-digit',
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });

                const badgeEstado = ayuda.activa
                    ? '<span class="badge bg-success">Activa</span>'
                    : '<span class="badge bg-secondary">Inactiva</span>';

                html += `
                    <div class="card shadow-sm mb-3 hover-shadow">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">
                                    <a href="#" class="text-decoration-none text-dark">
                                        ${ayuda.descripcion}
                                    </a>
                                </h5>
                                ${badgeEstado}
                            </div>
                            <p class="card-text text-muted mb-2">
                                ${ayuda.contenido.substring(0, 150)}${ayuda.contenido.length > 150 ? '...' : ''}
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted small">
                                    <i class="bi bi-person-fill"></i> ${ayuda.nombre_usuario}
                                    <span class="mx-2">|</span>
                                    <i class="bi bi-calendar-fill"></i> ${fechaFormateada}
                                    <span class="mx-2">|</span>
                                    <i class="bi bi-chat-fill"></i> ${ayuda.num_respuestas} respuestas
                                </div>
                                <a href="#" class="btn btn-sm btn-outline-primary">
                                    Ver detalles
                                    <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                `;
            });

            container.innerHTML = html;
        }

        // Función para aplicar búsqueda
        function aplicarBusqueda() {
            const textoBusqueda = document.getElementById('txtBuscador').value.toLowerCase().trim();

            if (textoBusqueda === '') {
                mostrarAyudas(ayudasData);
                return;
            }

            const ayudasFiltradas = ayudasData.filter(ayuda =>
                ayuda.descripcion.toLowerCase().includes(textoBusqueda) ||
                ayuda.contenido.toLowerCase().includes(textoBusqueda)
            );

            mostrarAyudas(ayudasFiltradas);
        }

        // Función para aplicar filtros
        function aplicarFiltros() {
            let ayudasFiltradas = [...ayudasData];

            // Filtro por estado
            const estado = document.querySelector('input[name="filtroEstado"]:checked').value;
            if (estado !== '') {
                ayudasFiltradas = ayudasFiltradas.filter(ayuda =>
                    ayuda.activa === (estado === '1')
                );
            }

            // Filtro por usuario (solo admin)
            const usuarioId = document.getElementById('filtroUsuario')?.value;
            if (usuarioId) {
                ayudasFiltradas = ayudasFiltradas.filter(ayuda =>
                    ayuda.id_usuario == usuarioId
                );
            }

            // Filtro por fecha
            const filtroFecha = document.getElementById('filtroFecha').value;
            if (filtroFecha) {
                const hoy = new Date();
                ayudasFiltradas = ayudasFiltradas.filter(ayuda => {
                    const fechaAyuda = new Date(ayuda.fecha);

                    if (filtroFecha === 'hoy') {
                        return fechaAyuda.toDateString() === hoy.toDateString();
                    } else if (filtroFecha === 'semana') {
                        const semanaAtras = new Date(hoy.getTime() - 7 * 24 * 60 * 60 * 1000);
                        return fechaAyuda >= semanaAtras;
                    } else if (filtroFecha === 'mes') {
                        const mesAtras = new Date(hoy.getTime() - 30 * 24 * 60 * 60 * 1000);
                        return fechaAyuda >= mesAtras;
                    }
                    return true;
                });
            }

            // Filtro por respuestas
            const filtroRespuestas = document.getElementById('filtroRespuestas').value;
            if (filtroRespuestas === 'sin_respuestas') {
                ayudasFiltradas = ayudasFiltradas.filter(ayuda => ayuda.num_respuestas === 0);
            } else if (filtroRespuestas === 'con_respuestas') {
                ayudasFiltradas = ayudasFiltradas.filter(ayuda => ayuda.num_respuestas > 0);
            }

            mostrarAyudas(ayudasFiltradas);
        }

        // Función para limpiar filtros
        function limpiarFiltros() {
            // Limpiar buscador
            document.getElementById('txtBuscador').value = '';

            // Limpiar estado
            document.getElementById('estadoTodas').checked = true;

            // Limpiar usuario (si existe)
            const filtroUsuario = document.getElementById('filtroUsuario');
            if (filtroUsuario) {
                filtroUsuario.value = '';
            }

            // Limpiar fecha
            document.getElementById('filtroFecha').value = '';

            // Limpiar respuestas
            document.getElementById('filtroRespuestas').value = '';

            // Mostrar todas las ayudas
            mostrarAyudas(ayudasData);
        }

        // Función para mostrar errores
        function mostrarError(mensaje) {
            const container = document.getElementById('listadoAyudas');
            container.innerHTML = `
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    ${mensaje}
                </div>
            `;
        }
    </script>

    <style>
        /* Efecto hover en las tarjetas */
        .hover-shadow {
            transition: all 0.3s ease;
        }
        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        /* Estilos para el sidebar sticky */
        .sticky-top {
            z-index: 1020;
        }
    </style>
}