@model AyudaIguales.Models.CrearAyudaRequest
@{
    ViewData["Title"] = "Crear Ayuda";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-plus-circle-fill"></i>
                        Publicar Nueva Ayuda
                    </h3>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        Describe tu duda o problema y la comunidad te ayudará a resolverlo.
                    </p>

                    @* Mostrar mensaje de error *@
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- IMPORTANTE: agregar enctype para subir archivos -->
                    <form asp-action="CrearAyuda" asp-controller="Ayuda" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <!-- Titulo/Descripcion -->
                        <div class="mb-3">
                            <label asp-for="descripcion" class="form-label fw-bold">
                                <i class="bi bi-pencil-fill text-primary"></i>
                                Título de la ayuda
                            </label>
                            <input asp-for="descripcion"
                                   class="form-control"
                                   placeholder="Ej: Ayuda con ecuaciones diferenciales"
                                   maxlength="255"
                                   required>
                            <div class="form-text">
                                Escribe un título claro y descriptivo (máximo 255 caracteres)
                            </div>
                            <span asp-validation-for="descripcion" class="text-danger"></span>
                        </div>

                        <!-- Contenido/Detalle -->
                        <div class="mb-3">
                            <label asp-for="contenido" class="form-label fw-bold">
                                <i class="bi bi-card-text text-primary"></i>
                                Descripción detallada
                            </label>
                            <textarea asp-for="contenido"
                                      class="form-control"
                                      rows="8"
                                      placeholder="Explica detalladamente tu duda o problema. Cuanta más información proporciones, mejor podrán ayudarte."
                                      required></textarea>
                            <div class="form-text">
                                Describe tu problema con el mayor detalle posible
                            </div>
                            <span asp-validation-for="contenido" class="text-danger"></span>
                        </div>

                        <!-- Campo para subir imagenes -->
                        <div class="mb-3">
                            <label asp-for="imagenes" class="form-label fw-bold">
                                <i class="bi bi-image-fill text-primary"></i>
                                Imágenes (opcional)
                            </label>
                            <input asp-for="imagenes"
                                   type="file"
                                   class="form-control"
                                   accept="image/jpeg,image/png,image/gif,image/webp"
                                   multiple
                                   id="imagenesInput">
                            <div class="form-text">
                                Puedes adjuntar hasta 5 imágenes (formatos: JPG, PNG, GIF, WEBP - máximo 5MB cada una)
                            </div>
                            <span asp-validation-for="imagenes" class="text-danger"></span>

                            <!-- Previsualizacion de imagenes -->
                            <div id="previewContainer" class="mt-3 d-flex flex-wrap gap-2"></div>
                        </div>

                        <!-- Botones -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-controller="Ayuda"
                               asp-action="AyudaHome"
                               class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i>
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send-fill"></i>
                                Publicar Ayuda
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Consejos para publicar -->
            <div class="card shadow-sm mt-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-lightbulb-fill text-warning"></i>
                        Consejos para obtener mejores respuestas
                    </h5>
                    <ul class="mb-0">
                        <li>Sé específico con tu problema</li>
                        <li>Incluye ejemplos si es posible</li>
                        <li>Menciona qué has intentado hacer</li>
                        <li>Usa un lenguaje claro y respetuoso</li>
                        <li>Adjunta imágenes que ayuden a entender el problema</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Script para preview de imagenes -->
    <script>
        document.getElementById('imagenesInput').addEventListener('change', function(e) {
            const previewContainer = document.getElementById('previewContainer');
            previewContainer.innerHTML = '';

            const files = Array.from(e.target.files);

            // Limitar a 5 imagenes
            if (files.length > 5) {
                alert('Solo puedes subir un máximo de 5 imágenes');
                e.target.value = '';
                return;
            }

            files.forEach(file => {
                // Validar tamaño (5MB maximo)
                if (file.size > 5 * 1024 * 1024) {
                    alert(`El archivo ${file.name} supera los 5MB`);
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(event) {
                    const div = document.createElement('div');
                    div.className = 'position-relative';
                    div.style.width = '100px';
                    div.style.height = '100px';

                    const img = document.createElement('img');
                    img.src = event.target.result;
                    img.className = 'img-thumbnail';
                    img.style.width = '100%';
                    img.style.height = '100%';
                    img.style.objectFit = 'cover';

                    div.appendChild(img);
                    previewContainer.appendChild(div);
                };
                reader.readAsDataURL(file);
            });
        });
    </script>
}