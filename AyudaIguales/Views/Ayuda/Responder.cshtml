@model Ayuda
@{
    ViewData["Title"] = "Responder Ayuda";
}

<div class="container mt-4">
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Respondiendo a: @Model.descripcion</h5>
            @if (!Model.activa)
            {
                <span class="badge bg-secondary">Ayuda desactivada</span>
            }
        </div>
        <div class="card-body">
            <p class="text-muted mb-3">@Model.contenido</p>
            <hr />

            @if (!Model.activa)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    Esta ayuda está desactivada y no se pueden añadir nuevas respuestas.
                </div>
                <a asp-controller="Ayuda" asp-action="DetalleAyuda" asp-route-id="@Model.id" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver al detalle
                </a>
            }
            else
            {
                <form asp-controller="Ayuda" asp-action="Responder" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id_ayuda" value="@Model.id" />

                    <div class="mb-3">
                        <label for="contenido" class="form-label">Tu respuesta *</label>
                        <textarea name="contenido" id="contenido" class="form-control" rows="6" required></textarea>
                        <small class="form-text text-muted">Escribe tu respuesta de forma clara y detallada</small>
                    </div>

                    <div class="mb-3">
                        <label for="imagenes" class="form-label">Imágenes (opcional, máximo 5)</label>
                        <input type="file" name="imagenes" id="imagenes" class="form-control" accept="image/*" multiple />
                        <small class="form-text text-muted">Puedes adjuntar imágenes para complementar tu respuesta</small>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send"></i> Publicar Respuesta
                        </button>
                        <a asp-controller="Ayuda" asp-action="DetalleAyuda" asp-route-id="@Model.id" class="btn btn-secondary">
                            Cancelar
                        </a>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Validar numero de imagenes
        const imagenesInput = document.getElementById('imagenes');
        if (imagenesInput) {
            imagenesInput.addEventListener('change', function(e) {
                if (this.files.length > 5) {
                    alert('Solo puedes subir un máximo de 5 imágenes');
                    this.value = '';
                }
            });
        }
    </script>
}