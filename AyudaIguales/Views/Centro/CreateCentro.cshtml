@model AyudaIguales.Models.Centro

@{
    ViewData["Title"] = "Registrar Centro";
}

<h2 class="mb-4">Registrar un nuevo centro</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="nombre" class="form-label">Nombre del centro</label>
        <input asp-for="nombre" class="form-control" />
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="cif" class="form-label">CIF del centro</label>
        <input asp-for="cif" class="form-control" />
        <span asp-validation-for="cif" class="text-danger"></span>
    </div>

   

    <button type="submit" class="btn btn-primary">Registrar Centro</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
