@model List<Chat>
@{
    ViewData["Title"] = "Chats";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-chat-dots-fill text-primary"></i>
            Mensajes
        </h2>
        <a asp-controller="Chat" asp-action="NuevoChat" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            Nuevo Chat
        </a>
    </div>

    <!-- Mostrar mensajes de éxito/error -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Lista de chats -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (Model != null && Model.Count > 0)
            {
                <div class="list-group list-group-flush">
                    @foreach (var chat in Model)
                    {
                        <a href="@Url.Action("Conversacion", "Chat", new { id = chat.id_chat })"
                           class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h5 class="mb-1">
                                        <i class="bi bi-person-circle"></i>
                                        @chat.nombre_otro_usuario
                                    </h5>
                                    @if (!string.IsNullOrEmpty(chat.ultimo_mensaje))
                                    {
                                        <p class="mb-1 text-muted small">
                                            @if (chat.mensaje_propio)
                                            {
                                                <strong>Tú:</strong>
                                            }
                                            @(chat.ultimo_mensaje.Length > 50 ? chat.ultimo_mensaje.Substring(0, 50) + "..." : chat.ultimo_mensaje)
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="mb-1 text-muted small fst-italic">No hay mensajes aún</p>
                                    }
                                </div>
                                <div class="text-end">
                                    @if (chat.fecha_ultimo_mensaje.HasValue)
                                    {
                                        <small class="text-muted">
                                            @chat.fecha_ultimo_mensaje.Value.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">
                                            @chat.fecha_creacion.ToString("dd/MM/yyyy")
                                        </small>
                                    }
                                </div>
                            </div>
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-chat-square-text fs-1 text-muted"></i>
                    <p class="mt-3 text-muted">No tienes conversaciones aún</p>
                    <a asp-controller="Chat" asp-action="NuevoChat" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i>
                        Iniciar una conversación
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .list-group-item:hover {
        background-color: #f8f9fa;
        cursor: pointer;
    }

    .list-group-item {
        transition: background-color 0.2s;
    }
</style>