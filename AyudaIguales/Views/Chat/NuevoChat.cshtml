@model ObtenerUsuariosResponse
@{
    ViewData["Title"] = "Nuevo Chat";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-person-plus-fill"></i>
                Selecciona un usuario para chatear
            </h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.usuarios != null && Model.usuarios.Count > 0)
            {
                <div class="list-group">
                    @foreach (var usuario in Model.usuarios)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0">
                                    <i class="bi bi-person-circle"></i>
                                    @usuario.nombre_usuario
                                </h6>
                                
                            </div>
                            <form asp-controller="Chat" asp-action="Crear" method="post" class="d-inline">
                                <input type="hidden" name="id_usuario2" value="@usuario.id" />
                                <button type="submit" class="btn btn-sm btn-primary">
                                    <i class="bi bi-chat-fill"></i>
                                    Chatear
                                </button>
                            </form>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-people fs-1 text-muted"></i>
                    <p class="mt-3 text-muted">No hay otros usuarios disponibles en tu centro</p>
                </div>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Chat" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i>
                Volver
            </a>
        </div>
    </div>
</div>