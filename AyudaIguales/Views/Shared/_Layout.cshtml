<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AyudaIguales</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100 bg-light">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm sticky-top">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center gap-2"
                   asp-controller="Home" asp-action="Index">
                    <i class="bi bi-book-half fs-4"></i>
                    AyudaIguales
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Chat" asp-action="Index">
                                Chat
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Centro" asp-action="CreateCentro">
                                Crear Centro
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm"
                               asp-controller="User" asp-action="Registro">
                                Iniciar sesión
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light btn-sm text-primary fw-semibold"
                               asp-controller="User" asp-action="Registro">
                                Registrarse
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTENIDO -->
    <main class="flex-grow-1 d-flex flex-column py-4">
        <div class="container d-flex flex-column flex-grow-1">
            <div class="bg-white rounded-4 shadow-sm p-4 flex-grow-1">
                @RenderBody()
            </div>
        </div>
    </main>


    <!-- FOOTER -->
    <footer class="bg-dark text-white mt-auto pt-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3">AyudaIguales</h5>
                    <p class="text-white-50 small">
                        Comunidad educativa donde los estudiantes se ayudan entre sí.
                    </p>
                    <div class="d-flex gap-3 fs-5">
                        <a href="#" class="text-white-50"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white-50"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="text-white-50"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-white-50"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

                <div class="col-md-4">
                    <h6 class="fw-bold mb-3">Enlaces</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Sobre nosotros</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Normas</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Soporte</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Contacto</a></li>
                    </ul>
                </div>

                <div class="col-md-4">
                    <h6 class="fw-bold mb-3">Legal</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Privacy"
                               class="text-white-50 text-decoration-none">
                                Política de privacidad
                            </a>
                        </li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Términos</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Cookies</a></li>
                    </ul>
                </div>
            </div>

            <hr class="border-secondary my-4">

            <div class="d-flex flex-column flex-md-row justify-content-between small text-white-50">
                <span>&copy; 2026 AyudaIguales</span>
                <span>Hecho con ❤️ para estudiantes</span>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
